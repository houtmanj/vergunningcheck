FROM node:alpine AS builder
LABEL maintainer="datapunt@amsterdam.nl"

WORKDIR /app/

COPY apps/client/package*.json ./
RUN npm ci
COPY apps/client/ ./

ARG NODE_ENV
ARG STTR_BUILDER_API_KEY
ARG STTR_ENV
RUN npm run sttr
RUN npm run build

